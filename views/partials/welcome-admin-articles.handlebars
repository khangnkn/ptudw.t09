<div class="container-wc">
    <span class="list-header"><i class="far fa-file"></i> List Of Articles</span>
    <br>
    <hr>
    
    <div>
        <span class="list-header">Add New Article: </span>
        <a href="#" class="btn-add btn btn-info"><i class="fas fa-plus"></i></a>
    </div>
    <br>
    <table class="table table-striped table-data">
        <thead>
            <tr>
            <th scope="col" style="width: 10px !important;">#</th>
            <th scope="col" style="width: 30px;">Title</th>
            <th scope="col" style="width: 30px;">Author</th>
            <th scope="col" style="width: 95px;">Abstract</th>
            <th scope="col" style="width: 15px;">Date</th>
            <th scope="col" style="width: 40px;">SubCategory</th>
            {{!-- <th scope="col" style="width: 20px;">Number Of Tags</th> --}}
            <th scope="col" style="width: 40px;">State</th>
            <th scope="col" style="width: 40px;">Premium</th>
            <th scope="col" style="width: 27px;">Publish Time</th>
            <th scope="col" style="width: 15px;">Update</th>
            <th scope="col" style="width: 20px;">More</th>
            </tr>
        </thead>
        <tbody>
            {{#each drafts}}
                <tr>
                    <th scope="row">{{this.Id}}</th>
                    <td>{{this.Title}}</td>
                    <td>{{this.Alias}}</td>
                    <td>{{this.Abstract}}</td>
                    <td>{{this.Date}}</td>
                    <td>
                        <select class="custom-select" id="inputGroupSelect01">
                            {{#each ../subCate}}
                                    <option value="{{this.Id}}" {{isSelected ../Category this.Id}}>{{this.Name}}</option>
                            {{/each}}
                        </select>
                    </td>
                    {{!-- <td>
                        {{this.NoT}}
                    </td> --}}
                    <td>
                        <select class="custom-select" id="inputGroupSelect01">
                            {{#each ../states}}
                                    <option value="{{this.Id}}" {{isSelected ../State this.Id}}>{{this.Status}}</option>
                            {{/each}}
                        </select>
                    </td>
                    <td>
                        {{#ifCond this.Premium '!==' null}}
                            <select class="custom-select" id="inputGroupSelect01">
                                <option value="0" {{isSelected this.Premium 0}}>No Premium</option>
                                <option value="1" {{isSelected this.Premeium 1}}>Premium</option>
                            </select>
                        {{/ifCond}}
                    </td>
                    <td>{{this.PublishTime}}</td>
                    <td>
                        <button class="btn btn-secondary">
                            <i class="fas fa-upload"></i>
                        </button>
                    </td>
                    <td>
                        <button type="button" class="btn btn-success dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-cog"></i>
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#"><i class="fas fa-eye"></i> Detail</a>
                            <a class="dropdown-item" href="#"><i class="fas fa-edit"></i> Edit</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#"><i class="fas fa-trash-alt"></i> Delete</a>
                        </div>
                    </td>
                </tr> 
            {{/each}}
        </tbody>
    </table>
</div>

