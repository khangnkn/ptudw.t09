<a href="/article/article-{{data.Id}}">
    <div class="card card-short-content {{cs}}">
        <div class="card-img">
            {{#if data.Cover}}
            <img src="{{data.Cover}}" alt="" class="card-img-top">
            {{else}}
            <img src="/images/articles/1/article-img1.png" alt="" class="card-img-top">
            {{/if}}
        </div>
        <div class="card-body">
            {{#if data.Title}}
            <h4>{{data.Title}}</h4>
            {{else}}
            <h4>This title is a bug.</h4>
            {{/if}}
            <div class="sc-info">
                <img src="/images/icons/outline-create-24px.svg" alt="Date Created">
                <div>
                    <div>
                        {{#if data.Author}}
                        <em>Tác giả: {{data.Author}}</em>
                        {{else}}
                        <em>Tác giả: Không tên</em>
                        {{/if}}
                    </div>
                    <div>
                        {{#if data.Date}}
                        <em>Ngày xuất bản: {{data.Date}}</em>
                        {{else}}
                        <em>Ngày xuất bản: Không rõ</em>
                        {{/if}}
                    </div>
                    {{#if data.Category}}
                    <div class="badge badge-primary">{{data.Category}}</div>
                    {{/if}}
                </div>
            </div>
            <p class="card-text">
                {{#if data.Abstract}}
                {{data.Abstract}}
                {{else}}
                <p>
                    <strong>Đọc tiếp ...</strong>
                </p>
                {{/if}}
            </p>
            {{#if isWriter}}
            <button class="btn btn-primary">Xem</button>
            <button class="btn btn-info">Chỉnh sửa</button>
            {{/if}}
        </div>
    </div>
</a>