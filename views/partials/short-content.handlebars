<a href="/article/article-{{sc-id}}">
    <div class="card card-short-content {{cs}}">
        <div class="card-img">
            {{#if sc-image}}
            <img src="{{sc-image}}" alt="" class="card-img-top">
            {{else}}
            <img src="/images/articles/1/article-img1.png" alt="" class="card-img-top">
            {{/if}}
        </div>
        <div class="card-body">
            {{#if sc-title}}
            <h4>{{sc-title}}</h4>
            {{else}}
            <h4>This title is a bug.</h4>
            {{/if}}
            <div class="sc-info">
                <img src="/images/icons/outline-create-24px.svg" alt="Date Created">
                <div>
                    <div>
                        {{#if sc-author}}
                        <em>Tác giả: {{sc-author}}</em>
                        {{else}}
                        <em>Tác giả: Không tên</em>
                        {{/if}}
                    </div>
                    <div>
                        {{#if sc-date}}
                        <em>Ngày xuất bản: {{sc-date}}</em>
                        {{else}}
                        <em>Ngày xuất bản: Không rõ</em>
                        {{/if}}
                    </div>
                    {{#if sc-category}}
                    <div class="badge badge-primary">{{sc-category}}</div>
                    {{/if}}
                </div>
            </div>
            <p class="card-text">
                {{#if sc-abstract}}
                {{sc-abstract}}
                {{else}}
                <p>
                    <strong>Đọc tiếp ...</strong>
                </p>
                {{/if}}
            </p>
            {{#if isWriter}}
            <button class="btn btn-primary">Xem</button>
            <button class="btn btn-info">Chỉnh sửa</button>
            {{/if}}
        </div>
    </div>
</a>