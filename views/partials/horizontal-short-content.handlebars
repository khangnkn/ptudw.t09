<a href="/article/article-{{data.Id}}">
    <div class="row hsc">
        <div class="col-sm-4">
            {{#if data.Cover}}
            <img src="{{data.Cover}}" alt="" class="card-img-top">
            {{else}}
            <img src="/images/articles/1/article-img1.png" alt="" class="card-img-top">
            {{/if}}
        </div>
        <div class="col-sm-8">
            <div class="badge badge-primary">{{data.Category}}</div>
            {{#if data.Title}}
            <h4>{{data.Title}}</h4>
            {{else}}
            <h4>This title is a bug.</h4>
            {{/if}}
            <div class="post-info">
                {{#if data.Author}}
                <strong><i class="fa fa-user" aria-hidden="true"></i> Tác giả: </strong>{{data.Author}}
                {{else}}
                <strong>Tác giả: </strong>Khuyết danh
                {{/if}}
                <span> | </span>
                {{#if data.Date}}
                <strong><i class="fa fa-calendar" aria-hidden="true"></i> Ngày xuất bản: </strong>{{data.Date}}
                {{else}}
                <strong>Ngày xuất bản: </strong>Chưa xác định
                {{/if}}
            </div>
            <div class="abstract">
                {{data.Abstract}}
            </div>
        </div>

    </div>
</a>