{{#section 'css'}}
<style>
    .cover {
        max-width: 300px;
    }
</style>
{{/section}}
<div class="container article">
    <div class="title">
        <h1>{{Title}}</h1>
    </div>
    <div class="d-flex justify-content-center">
        {{#if Cover}}
        <img style="max-width: 100%;" src="{{Cover}}" alt="Cover">
        {{else}}
        <button type="button" class="btn btn-outline-warning" disabled>Cover is missing</button>
        {{/if}}
    </div>
    <div class="creation-info">
        <img src="/images/icons/outline-create-24px.svg" alt="Date Created">
        <div class="author-date">
            <em>Author: {{{Alias}}}</em> <br>
            <em>Date: {{{Date}}}</em>
        </div>

    </div>
    <div class="abstract">
        <p>{{Abstract}}</p>
    </div>
    <div class="content">
        {{{Content}}}
    </div>
</div>