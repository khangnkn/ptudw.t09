<div class="card" id="card-detail">
    <div class="card-body">
        <div class="card-detail">
            <small class="card-writer">{{writer}}</small>
            <h5 class="card-title"><a href="{{link}}" id="card-title"><b>{{title}}</b></a></h5>
            <small class="card-datetime">{{datetime}}</small>
        </div>
        <div class="card-action">
        </div>
        <ul class="nav navbar-nav">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle action" data-toggle="dropdown"><b class="caret"></b></a>
                <ul class="dropdown-menu dropdown-menu-right shadow-none" id="action">
                    <li><button type="button" class="btn btn-outline-primary"><i class="fas fa-pencil-alt"></i><small>
                                Edit</small></button></li>
                    <li><button type="button" class="btn btn-outline-primary" data-toggle="modal"
                            data-target="#view_modal"><i class="far fa-eye"></i><small>
                                View</small></button></li>
                    <li><button type="button" class="btn btn-outline-primary"><i class="far fa-newspaper"></i><small>
                                Publish</small></button></li>
                    <li><button type="button" class="btn btn-outline-primary" data-toggle="modal"
                            data-target="#deny_modal"><i class="fas fa-eraser"></i><small>
                                Deny</small></button>
                    <li><button type="button" class="btn btn-outline-primary"><i class="fas fa-trash"></i><small>
                                Trash</small></button>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
</div>
<div class="modal fade" id="view_modal" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn btn-primary"><small>
                        Publish now</small></button>
                <button type="button" class="btn btn-primary"><small>
                        Trash</small></button>
            </div>
            <div class="modal-body" id="data">
                {{> article}}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deny_modal" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4>Lý do từ chối</h4>
            </div>
            <div class="modal-body" id="data">
                <form>
                    <div class="form-group">
                        <label for="message-text" class="control-label"><b>Yêu câu hiệu chỉnh:</b></label>
                        <textarea class="form-control" id="message-text" rows="5"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>