<form id="change-password-form">
    <div class="text-center">
        <h2>Đổi mật khẩu</h2>
        <small>Hãy chọn một mật khẩu an toàn!</small>
    </div>
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username"
            aria-describedby="button-addon2">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button" id="button-addon2">Button</button>
        </div>
    </div>
    <div class="input-group">
        <input type="password" class="form-control" id="new-password" placeholder="Mật khẩu mới">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="button" id="button-addon2">Button</button>
        </div>
    </div>
    <div class="input-group">
        <input type="password" class="form-control" id="confirm-new-password" placeholder="Xác nhận">
    </div>
    <div class="text-center"><button type="submit" class="btn btn-primary">Đổi mật khẩu</button></div>
</form>