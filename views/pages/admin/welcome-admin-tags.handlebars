<div class="container-wc">
    <div class="conainer-table">
        <span class="list-header"><i class="fas fa-tags"></i> List Of Tags</span>
        
        <hr>
    </div>

    <div class="tb-tag-cat">
        <form class="d-flex ">
            <input type="text" class="form-control input-add" placeholder="Add New Tag" >
            <button type="submit" class="btn-add btn btn-info"><i class="fas fa-plus"></i></button>
        </form>
    </div>
    <br>
    <table class="table table-striped table-data tb-tag-cat" >
        <thead>
            <tr>
            <th scope="col" style="width: 10px !important;">#</th>
            <th scope="col" style="width: 30px;">Tag</th>
            <th scope="col" style="width: 30px;">Number Of Drafts</th>
            <th scope="col" style="width: 20px;">List Of Drafts</th>
            <th scope="col" style="width: 15px;">Update</th>
            <th scope="col" style="width: 20px;">Delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each tags}}
                <tr>
                    <th scope="row">{{this.Id}}</th>
                    <form action="/admin/welcome/update-tag" method="POST" id="updateFrom">
                        <input type="hidden" name="Id" value="{{this.Id}}" >
                    <td>
                        <input type="text" name="Name" value="{{this.Name}}" >
                    </td>
                    </form>
                    <td>{{this.NofDr}}</td>
                    <td>   
                        <form action="/admin/welcome/tags" method="POST">
                            <input type="hidden" name="Id" value="{{this.Id}}" >
                            <button class="btn btn-success" type="submit">
                                <i class="fas fa-list-ul"></i>
                            </button>
                        </form>
                    </td>
                    <td>
                            <a class="btn btn-secondary" href="javascript: $('#updateFrom').submit();">
                                <i class="fas fa-upload"></i>
                            </a>
                    </td>

                    <td>
                        <form action="/admin/welcome/delete-tag" method="POST">
                            <input type="hidden" name="Id" value="{{this.Id}}" >
                            <button class="btn btn-danger" type="submit">
                                <i class="far fa-trash-alt"></i>
                            </button>
                        </form>
                    </td>
                </tr> 
            {{/each}}
        </tbody>
    </table>
    <br>
        <br>
    {{#if result}}
        <div class="conainer-table">
        <hr>
        <span class="list-header"><i class="far fa-file"></i> List Drafts </span>
        </div>
        <br><br>
            <table id="order-listing" class="table dataTable " role="grid">
            <thead>
                <tr role="row">
                    <th scope="sorting_asc" style="width: 10px !important;">#</th>
                    <th scope="sorting" style="width: 30px;">Title</th>
                    <th scope="sorting" style="width: 30px;">Author</th>
                    <th scope="sorting" style="width: 15px;">Date</th>
                    <th scope="sorting" style="width: 40px;">SubCategory</th>
                    <th scope="sorting" style="width: 40px;">Category</th>
                    <th scope="sorting" style="width: 40px;">State</th>
                    <th scope="sorting" style="width: 20px;">Detail</th>
                    <th scope="sorting" style="width: 20px;">Edit</th>
                    <th scope="sorting" style="width: 20px;">Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#each Draft}}
                    <tr>
                        <th scope="row">{{this.Id}}</th>
                        <td>
                            {{this.Title}}
                        </td>
                        <td>
                            {{this.Author}}
                        </td>
                        <td>
                            {{this.Date}}
                        </td>
                        <td>
                            {{this.SubCategory}}
                        </td>
                        <td>
                            {{this.Category}}
                        </td>
                        <td>
                            {{this.State}}
                        </td>
                        <td>
                            <a class="btn btn-info" href="#">
                                <i class="far fa-eye"></i>
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-success" href="#">
                                <i class="far fa-edit"></i>
                            </a>
                        </td>
                        <td>
                            <button class="btn btn-danger">
                                <i class="far fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    {{/if}}
  <br><br>  
</div>

