<div class="row">
    <div class="col-sm-2">
        {{> side-panel}}
    </div>
    <div class="col-sm-10">
        <input id="post-title" type="text" class="form-control no-border lead" placeholder="Tiêu đề" width="100%" />
        <div id="froala-editor" class="fr-box custom-theme fr-basic fr-top"></div>
        <div class="form-group d-flex flex-row-reverse">
            <button type="button" class="btn btn-outline-primary mt-5 right">Đăng bài</button>
        </div>
        <label for="categories">Categories:</label>
        <select id="categories">
            <option value="volvo">Volvo</option>
            <option value="saab">Saab</option>
            <option value="mercedes">Mercedes</option>
            <option value="audi">Audi</option>
        </select>
        <label for="tags">Tags:</label>
        <input type="text" name="tags" id="tags" class="border-0 shadow-none" />
    </div>
</div>



<!-- Include Editor JS files. -->
<script type="text/javascript"
    src="https://cdn.jsdelivr.net/npm/froala-editor@2.9.0/js/froala_editor.pkgd.min.js"></script>
<!-- Initialize the editor. -->
<script>
    $(function () {
        $('div#froala-editor').froalaEditor(
            {
                toolbarButtons: [
                    'bold',
                    'italic',
                    'underline',
                    'paragraphFormat',
                    'fontSize',
                    'color',
                    '|',
                    'align',
                    'outdent',
                    'indent',
                    'insertLink',
                    'quote',
                    'insertHR',
                    '|',
                    'insertImage',
                    'clearFormatting',
                    'html',

                ],
                tableResizingLimit: 100,
                placeholderText: false,
            });
    });
</script>