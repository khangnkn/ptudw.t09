<style>
    div[role="toolbar"] {
        border: none !important;
    }

    #post-title {
        font-size: large;
    }
</style>

<form method="POST">
    <input id="post-title" type="text" class="form-control border-0 shadow-none font-weight-bold" placeholder="Tiêu đề"
        width="100%" name="Title" />
    {{!-- <textarea id="tiny-editor" name="Content"></textarea> --}}
    <div class="form-group">
        <label for="comment"><b>Abstract</b>:</label>
        <textarea class="form-control shadow-none" rows="2" id="comment" name="Abstract"></textarea>
    </div>
    <div class="form-group">
        <label for="Cover">Cover: </label>
        <input type="text" name="Cover" id="Cover" class="form-control" placeholder="https://cdn.photo.com/sample.jpg">
    </div>
    <div class="form-group">
        <label for="comment"><b>Content</b>:</label>
        <textarea id="tiny-editor" name="Content"></textarea>
    </div>
    <div class="form-group">
        <label for="CatSelect">Category: </label>
        <select class="form-control" name="CatSelect" id="CatSelect">
            {{#each Cats}}
            <option value="{{this.Id}}">{{this.Name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group d-flex flex-row-reverse">
        <button type="submit" class="btn btn-outline-primary mt-5 right">Đăng bài</button>
    </div>
</form>

{{#section 'js'}}
<script src="https://cdn.tiny.cloud/1/j7ksxfppru4mwv156fe0cz8fobscw12j7jmaiw7cvfqaer16/tinymce/5/tinymce.min.js">
</script>
<script>
    tinymce.init({ selector: '#tiny-editor', menubar: false, border: false, statusbar: false, plugins: "autoresize", autoresize_on_init: false, });
</script>
{{/section}}